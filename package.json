{
    "name": "crefy-connect-backend",
    "version": "1.0.0",
    "description": "Wallet authentication API with Express and TypeScript",
    "main": "dist/server.js",
    "scripts": {
        "prepare": "husky install",
        "pre-commit": "lint-staged",
        "lint": "eslint src/**/*.ts --fix",
        "lint:check": "eslint src/**/*.ts",
        "type-check": "tsc --noEmit",
        "test": "jest",
        "test:ci": "jest --ci --coverage",
        "validate": "npm run lint:check && npm run type-check && npm run test:ci",
        "clean": "rimraf dist",
        "build": "npm run clean && npm run tsoa:spec && npm run tsoa:routes && tsc",
        "build:watch": "tsc --watch",
        "tsoa:spec": "tsoa spec",
        "tsoa:routes": "tsoa routes",
        "dev": "ts-node-dev --respawn --transpile-only --watch src src/server.ts",
        "dev:swagger": "concurrently \"npm run tsoa:watch\" \"npm run dev\"",
        "tsoa:watch": "chokidar \"src/**/*.ts\" -c \"npm run tsoa:spec && npm run tsoa:routes\"",
        "dev:watch": "ts-node-dev --respawn --transpile-only src/server.ts",
        "start": "node dist/server.js",
        "start:dev": "nodemon dist/server.js"
    },
    "lint-staged": {
        "**/*.{ts,tsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "**/*.{js,jsx}": [
            "eslint --fix",
            "prettier --write"
        ],
        "**/*.{json,md,yml,yaml,css,scss}": [
            "prettier --write"
        ]
    },
    "keywords": [],
    "author": "Jimleston Osoi",
    "license": "ISC",
    "devDependencies": {
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@eslint/js": "^9.38.0",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.5",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/mongoose": "^5.11.97",
        "@types/morgan": "^1.9.10",
        "@types/node": "^24.9.2",
        "@types/nodemailer": "^7.0.3",
        "@types/swagger-ui-express": "^4.1.8",
        "@typescript-eslint/eslint-plugin": "^8.46.2",
        "@typescript-eslint/parser": "^8.46.2",
        "chokidar-cli": "^3.0.0",
        "concurrently": "^9.2.1",
        "eslint": "^9.0.0",
        "husky": "^9.1.7",
        "jest": "^30.2.0",
        "lint-staged": "^16.2.6",
        "mongoose": "^8.19.2",
        "rimraf": "^6.0.1",
        "swagger-ui-express": "^5.0.1",
        "ts-jest": "^29.4.5",
        "ts-node": "^10.9.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.46.2"
    },
    "dependencies": {
        "@stellar/stellar-sdk": "^14.4.3",
        "@tsoa/runtime": "^6.6.0",
        "axios": "^1.13.1",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.2",
        "cors": "^2.8.5",
        "crypto": "^1.0.1",
        "dev": "^0.1.3",
        "dotenv": "^17.2.3",
        "eslint-plugin-prettier": "^5.5.4",
        "express": "^5.1.0",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.1",
        "nodemailer": "^7.0.10",
        "nodemon": "^3.1.10",
        "ts-node-dev": "^2.0.0",
        "tsoa": "^6.6.0",
        "viem": "^2.38.6"
    }
}
